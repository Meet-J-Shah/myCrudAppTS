{
  "name": "mycrudappts",
  "version": "1.0.0",
  "description": "simple crud app in node in typescript language for understanding coding standard of tatvasoft",
  "main": "index.js",
  "scripts": {
    "combine": "start npm run build && nodemon ./dist/server.js",
    "start": "nodemon ./src/server.ts",
    "dev": "nodemon ./src/server.ts",
    "build": "tsc --project tsconfig.json",
    "prod": "nodemon ./dist/server.js",
    "prepare": "husky && husky install",
    "swagger": "ts-node-dev ./src/swagger/generate-swagger.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cover": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix",
    "migrate": "npx sequelize-cli db:migrate",
    "seed": "npx sequelize-cli db:seed:all"
  },
  "keywords": [],
  "author": "Meet Shah",
  "license": "ISC",
  "dependencies": {
    "@types/got": "^9.6.12",
    "@types/multer": "^1.4.12",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/ws": "^8.18.1",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "celebrate": "^15.0.3",
    "d": "^1.0.2",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "got": "^14.4.6",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.12.0",
    "node-fetch": "^3.3.2",
    "pdf.js": "^0.1.0",
    "puppeteer": "^24.2.0",
    "sequelize": "^6.37.5",
    "socket.io": "^4.8.1",
    "superagent": "^10.1.1",
    "supertest": "^7.0.0",
    "swagger-jsdoc": "^6.2.8",
    "ts-node-dev": "^2.0.0",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@jest/globals": "^29.7.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.1",
    "eslint": "^9.20.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "sequelize-cli": "^6.6.2",
    "sequelize-mock": "^0.10.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts}": [
      "eslint --ignore-pattern src/tests/**",
      "prettier --write"
    ],
    "(*.css|*.js|*.jsx|*.ts)": [
      "prettier --write"
    ]
  }
}
