{
  "name": "mycrudappts",
  "version": "1.0.0",
  "description": "simple crud app in node in typescript language for understanding coding standard of tatvasoft",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "combine": "start npm run build && nodemon ./dist/server.js",
    "start": "nodemon ./src/server.ts",
    "dev": "nodemon ./src/server.ts",
    "build": "tsc --project tsconfig.json",
    "prod": "nodemon ./dist/server.js",
    "prepare": "husky && husky install",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix",
    "migrate": "npx sequelize-cli db:migrate",
    "seed": "npx sequelize-cli db:seed:all"
  },
  "keywords": [],
  "author": "Meet Shah",
  "license": "ISC",
  "dependencies": {
    "@types/multer": "^1.4.12",
    "bcrypt": "^5.1.1",
    "celebrate": "^15.0.3",
    "d": "^1.0.2",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.12.0",
    "sequelize": "^6.37.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.1",
    "eslint": "^9.19.0",
    "husky": "^9.1.7",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "sequelize-cli": "^6.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
